<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#163E4E">

        <LinearLayout
            android:layout_width="333dp"
            android:layout_height="255dp"
            android:layout_gravity="center"
            android:background="#163E4E"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giriş yap"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5sp"
                android:drawableLeft="@drawable/ic_action_name"
                android:ems="10"
                android:hint=" Kulllanıcı adı"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/editTextSifre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_action_sifre"
                android:ems="10"
                android:hint=" Şifre"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#81B214"
                android:onClick="giris"
                android:text="Giriş" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#07689F"
                android:onClick="kayit_ol"
                android:text="Hesap Oluştur" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

