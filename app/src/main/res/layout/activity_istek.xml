<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#163E4E"
    tools:context=".Istek">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button13"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:backgroundTint="#7A8563"
            android:drawableLeft="@drawable/ic_action_bolge"
            android:onClick="bolge"
            android:text="Bölge" />

        <Button
            android:id="@+id/button14"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:backgroundTint="#7A8563"
            android:drawableLeft="@drawable/ic_action_istekk"
            android:text="İstek" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Rakip Bul"
        android:textColor="#81B214"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şehir: "
                android:textColor="#81B214" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="şehir gir"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlçe: "
                android:textColor="#81B214" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="İlçe gir"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saha İsmi: "
                android:textColor="#81B214" />

            <EditText
                android:id="@+id/editTextTextPersonName10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Saha gir"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste burada gözükecek"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"/>
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAnasayfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:backgroundTint="#81B214"
                android:drawableLeft="@drawable/ic_action_anasayfa"

                android:onClick="durum"
                android:text="Durum"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/button6"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:backgroundTint="#81B214"
                android:drawableLeft="@drawable/ic_action_takimm"
                android:text="Takım"

                android:textSize="8sp" />

            <Button
                android:id="@+id/buttonIstek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:backgroundTint="#81B214"
                android:drawableLeft="@drawable/ic_action_bidirim"
                android:onClick="istekler"
                android:text="İstekler"
                android:textSize="8sp" />

            <Button
                android:id="@+id/buttonProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="Profil"
                android:drawableLeft="@drawable/ic_action_profil"
                android:textSize="8sp" />
        </TableRow>


    </TableLayout>

</LinearLayout>